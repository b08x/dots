{
  "version": 2,
  "input_ports": [
    "NoiseTorch Microphone for Built-in Audio Source:capture_MONO"
  ],
  "save_path": "$HOME/Workspace/omega-13",
  "global_hotkey": "<ctrl>+<alt>+space",
  "transcription": {
    "enabled": true,
    "auto_transcribe": true,
    "server_url": "http://localhost:8080",
    "model_size": "large-v3-turbo",
    "save_to_file": true,
    "copy_to_clipboard": true,
    "inject_to_active_window": false,
    "inference_path": "/inference",
    "provider": "groq",
    "groq_api_key": "$GROQ_API_KEY",
    "groq_model": "whisper-large-v3-turbo"
  },
  "desktop_notifications": true,
  "sessions": {
    "temp_root": "$XDG_RUNTIME_DIR/omega13",
    "default_save_location": "$HOME/Recordings",
    "auto_cleanup_days": 7
  },
  "auto_record": {
    "enabled": false,
    "begin_threshold_db": -35.0,
    "end_threshold_db": -35.0,
    "silence_duration_seconds": 5.0
  }
}
